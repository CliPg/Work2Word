{
  "name": "work2word",
  "version": "1.0.1",
  "description": "AI-powered homework assistant for Mac and Windows",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:all": "electron-builder --mac --win",
    "clean": "node -e \"require('fs').rmSync('node_modules', {recursive: true, force: true}); require('fs').rmSync('dist', {recursive: true, force: true});\"",
    "clean:unix": "rm -rf node_modules dist",
    "clean:win": "if exist node_modules rmdir /s /q node_modules && if exist dist rmdir /s /q dist",
    "reinstall": "npm run clean && npm install",
    "install:fast": "cross-env PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true npm install",
    "install:cn": "npm install --registry=https://registry.npmmirror.com"
  },
  "keywords": [
    "homework",
    "ai",
    "llm",
    "mac",
    "windows",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/katex": "^0.16.7",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "npm:@jsdevtools/inflight@^1.0.6"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "docx": "^8.5.0",
    "electron-updater": "^6.6.2",
    "file-saver": "^2.0.5",
    "katex": "^0.16.27",
    "lucide-react": "^0.303.0",
    "mammoth": "^1.6.0",
    "marked": "^11.1.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-katex": "^3.1.0",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "word-extractor": "^1.0.4"
  },
  "build": {
    "appId": "com.work2word.app",
    "productName": "Work2Word",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "CliPg",
      "repo": "Work2Word"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/w2w_256x256.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/w2w_256x256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ],
      "language": "2052"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
