{
  "name": "work2word",
  "version": "1.0.0",
  "description": "AI-powered homework assistant for Mac",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "package": "electron-builder",
    "clean": "rm -rf node_modules dist",
    "reinstall": "npm run clean && npm install",
    "install:fast": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true npm install",
    "install:cn": "npm install --registry=https://registry.npmmirror.com"
  },
  "keywords": [
    "homework",
    "ai",
    "llm",
    "mac"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "npm:@jsdevtools/inflight@^1.0.6"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "docx": "^8.5.0",
    "file-saver": "^2.0.5",
    "lucide-react": "^0.303.0",
    "mammoth": "^1.6.0",
    "marked": "^11.1.1",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^9.0.1"
  },
  "build": {
    "appId": "com.work2word.app",
    "productName": "Work2Word",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
